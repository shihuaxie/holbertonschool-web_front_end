{
  "tagname-lowercase": true,          // 标签必须小写
  "attr-lowercase": true,             // 属性必须小写
  "attr-value-double-quotes": true,   // 属性值必须用双引号
  "doctype-first": true,              // 必须以 <!DOCTYPE html> 开头
  "tag-pair": true,                   // 标签必须成对出现
  "spec-char-escape": true,           // 特殊字符要用实体（如 &lt; &gt;）
  "id-unique": true,                  // id 必须唯一
  "src-not-empty": true,              // <img>、<script> 等 src 不允许为空
  "alt-require": true,                // <img> 必须有 alt 属性
  "title-require": true               // 必须有 <title>
}
